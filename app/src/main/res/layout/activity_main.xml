<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".main.ui.MainActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/line_divide"/>

    <View
        android:id="@+id/line_divide"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivide"
        app:layout_constraintBottom_toTopOf="@id/radioGroup_bottom" />

    <RadioGroup
        android:id="@+id/radioGroup_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorBackground"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <RadioButton
            android:id="@+id/rbMainPage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/nav_bottom_selector_0"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:text="@string/bottom_mainPage"
            android:textColor="@color/nav_bottom_color"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rbQA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/nav_bottom_selector_1"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:text="@string/qa"
            android:textColor="@color/nav_bottom_color"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rbDiscover"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/nav_bottom_selector_3"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:text="@string/discover"
            android:textColor="@color/nav_bottom_color"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rbMine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/nav_bottom_selector_4"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:text="@string/mine"
            android:textColor="@color/nav_bottom_color"
            android:textSize="12sp" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>